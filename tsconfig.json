    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": ".",
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "tests"]
}
